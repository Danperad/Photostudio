<Window x:Class="PhotostudioGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:fw="clr-namespace:SourceChord.FluentWPF;assembly=FluentWPF"
        mc:Ignorable=""
        Title="Sunrise"
        fw:AcrylicWindow.Enabled="True"
        fw:AcrylicWindow.ExtendViewIntoTitleBar="True" MinWidth="1050" MinHeight="600" Icon="/sunrise.png">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="5*" />
        </Grid.ColumnDefinitions>
        <Grid fw:PointerTracker.Enabled="True" Background="#25FFFFFF">
            <StackPanel>
                <TextBlock Text="Sunrise" FontWeight="DemiBold" FontSize="18"
                           fw:PointerTracker.Enabled="False" Margin=" 10 5 7 4"/>

                <ListView FontSize="15" Name="mainListView"/>
            </StackPanel>
        </Grid>
        <Frame Name="mainFrame" Grid.Column="1" NavigationUIVisibility="Hidden" />
    </Grid>
</Window>